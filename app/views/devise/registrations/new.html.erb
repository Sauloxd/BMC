<div class="flex justify-center justify-items-center h-screen w-screen">
  <div class="flex flex-col justify-center justify-items-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, class: {
          "text-sm block" => true,
          "text-red-400" => resource.errors[:email].present?,
        } %>
        <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          placeholder: 'your@email.com',
          class: {
            "rounded placeholder:text-slate-200" =>  true,
            "border-indigo-300" => resource.errors[:email].empty?,
            "border-red-400" => resource.errors[:email].present?
          } 
        %>
        <% resource.errors[:email].each do |msg| %>
          <div class="mt-2 text-xs text-red-400"> 
            <%= msg %>
          </div>
        <% end %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: {
          "text-sm block" => true,
           "text-red-400": resource.errors[:password].present?
        } %>
        <%= f.password_field :password, 
          placeholder: '*********', 
          autocomplete: "new-password", 
          class: { 
            "rounded border-indigo-300 rounded placeholder:text-slate-200" => true,
            "border-red-400": resource.errors[:password].present?
          }
        %>
        <% resource.errors[:password].each do |msg| %>
          <div class="mt-2 text-xs text-red-400"> 
            <%= msg %>
          </div>
        <% end %>
      </div>

      <div class="mt-4">
        <%= f.label :password_confirmation, class: "text-sm block" %>
        <%= f.password_field :password_confirmation, placeholder: '*********', autocomplete: "new-password", class: "rounded border-indigo-300 rounded placeholder:text-slate-200" %>
      </div>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-center text-xs text-indigo-500 font-semibold" %>
      <% end %>

      <div class="mt-4 mb-4 w-full">
        <%= f.submit "Sign up", class: "w-full text-center p-2 bg-indigo-500 text-white rounded cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

