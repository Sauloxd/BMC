<div class="flex justify-center justify-items-center h-screen w-screen">
  <div class="flex flex-col justify-center justify-items-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, class: "text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded border-indigo-300" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: "text-sm" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "rounded border-indigo-300" %>
      </div>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-center text-xs text-indigo-500 font-semibold" %><br />
      <% end %>

      <div class="mt-4 mb-4 w-full">
        <%= f.submit "Log in", class: "w-full text-center p-2 bg-indigo-500 text-white rounded cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
